// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
}

model Room {
  id          Int      @id @default(autoincrement())
  roomNumber  String   @unique
  type        String
  price       Float
  status      String   @default("Vacant") // Vacant, Occupied, Ready for Cleaning, Under Maintenance
  description String?
  bookings    Booking[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Booking {
  id            Int      @id @default(autoincrement())
  roomId        Int
  room          Room     @relation(fields: [roomId], references: [id])
  customerName  String
  phoneNumber   String
  email         String?
  checkInDate   DateTime
  checkOutDate  DateTime
  status        String   @default("Pending") // Pending, Confirmed, Cancelled, CheckedOut
  totalAmount   Float
  paymentStatus String   @default("Unpaid")  // Unpaid, Paid
  transactions  Transaction[]
  createdAt     DateTime @default(now())
}

model Transaction {
  id          Int      @id @default(autoincrement())
  bookingId   Int
  booking     Booking  @relation(fields: [bookingId], references: [id])
  amount      Float
  method      String
  status      String   @default("Pending")
  createdAt   DateTime @default(now())
}
